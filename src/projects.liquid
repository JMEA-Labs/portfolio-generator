---
pagination:
    data: portfolio.projects
    size: 1
    alias: project
permalink: "{{ project.link | slug }}/"
---

<!DOCTYPE HTML>
<html lang='en'>

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <link rel='stylesheet' href='../assets/styles.css'>
    <title>{{ portfolio.name }} - Portfolio</title>
    <style>
        html {
            --primary-color: {{ portfolio.colors.primary }};
            --text-light-color: {{ portfolio.colors.textLight }};
            --text-dark-color: {{ portfolio.colors.textDark }};
            --background-light-color: {{ portfolio.colors.backgroundLight }};
            --background-dark-color: {{ portfolio.colors.backgroundDark }};
        }
    </style>
</head>

<body>
    <main class='project-page'>
        <a href="/" class="back-button">
            <img src='../assets/arrowRight.webp'>
        </a>

        <div class='area-title with-image'>
            {% for tag in portfolio.tags %}
                {% if tag.name == project.tag %}
                    <p class='tag' style='background-color: {{ tag.color }} '>{{ tag.name }}</p>
                {% endif %}
            {% endfor %}

            <div class='project-image-container'>
                <img src="{{ project.image }}" alt="Project image">
            </div>

            <div class='details'>
                <h1 id='title' class='title'>
                    <span class='project-name'>{{ project.name }}</span>
                    <br>
                    <span class='author'>by {{ portfolio.name }}</span>
                </h1>

                {% if project.description %}
                    <p class='description'>{{ project.description }}</p>
                {% endif %}
            </div>
        </div>

        <div class='area-project'>
            <div>
                <h2>Details</h2>

                
            </div>

            {% if project.screenshots.length %}
                <div>
                    <h2>Screenshots</h2>
                </div>
            {% endif %}

            {% if project.video %}
                <div>
                    <h2>Video</h2>
                </div>
            {% endif %}
        </div>
    </main>

    {% if portfolio.showFooter %}
        <footer>
            <p>Portfolio made with <a href='https://github.com/jonathan-santos/portfolio-generator' target='_blank'>Portfolio generator</a> by <a href='https://github.com/jonathan-santos' target='_blank'>Jonathan Santos</a></p>

            <p>Built with with html, css, <a href='https://www.11ty.dev/' target='_blank'>Eleventy</a> and <img src='https://upload.wikimedia.org/wikipedia/commons/thumb/f/f1/Heart_coraz%C3%B3n.svg/160px-Heart_coraz%C3%B3n.svg.png'></p>

            <a href='#' class='back-to-top'>Back to top</a>
        </footer>
    {% endif %}
</body>

</html>